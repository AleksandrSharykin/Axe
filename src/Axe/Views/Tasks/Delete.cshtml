@model Axe.Models.ExamTask

@{
    ViewData["Title"] = "Delete Task";
}

<h4>Are you sure you want to delete this test task?</h4>
<hr />

<div class="form-horizontal">
    <input type="hidden" asp-for="Id" />
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <dl>
        <dt><label asp-for="Title" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt><label asp-for="Objective" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Objective)</dd>

        <dt><label asp-for="Technology" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Technology.Name)</dd>
    </dl>
    
    <hr />
    <form asp-action="Delete" method="post">
        <div class="form-group row">
            <div class="col-md-10">
                @Html.ActionLink("Cancel", "Details", "Tasks", new { id = Model.Id })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>
