@model Axe.Models.ExamTask

@{
    ViewData["Title"] = "Task Editor";
}

<h2>Create a test task</h2>

<form asp-action="Input">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Objective" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Objective" class="form-control" />
                <span asp-validation-for="Objective" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TechnologyId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="TechnologyId" class="form-control" asp-items="ViewBag.TechnologyId"></select>
                <span asp-validation-for="TechnologyId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

    <hr />
    @Html.ActionLink("Back to Technologies", "Index", "Technologies", new { technologyId = Model.TechnologyId })
</form>
