@model Axe.Models.ProfilesVm.EditProfileVm

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Profiles" asp-action="edit" asp-method="post" class="form-horizontal" >
    <br />
    <div asp-valitation-summary="All" class="text-danger"></div>

    <div class="row"> 
        <div class="col-md-3">
            <img src="" width="230" height="230" />
        </div>

        <div class="col-md-9">
            <div class="form-group">
                <label asp-for="UserName" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="UserName" class="form-control"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="JobPosition" class="col-md-2 control-label"></label>

                <div class="col-md-10">
                    <input asp-for="JobPosition" class="form-control"/>
                    <span asp-for="JobPosition" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </div>
        </div>
    </div>

</form>

