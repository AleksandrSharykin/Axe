@model Axe.Models.TaskQuestion

@{
    ViewData["Title"] = "New Question";
}

<h2>Ask new question</h2>

<form asp-action="Create" asp-controller="Questions" method="POST" >

    <div class="form-group">        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label asp-for="Text" class="control-label"></label>        

        <div class="row">
            <div class="col-md-6 form-group">
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group">
                @*todo: markdown parser and preview*@
                <p>
                    question preview
                </p>
            </div>
        </div>
    </div>

    <div class="form-group">

        <h3 class="control-label">Answers</h3>

            <div class="row form-group">
                <div class="col-md-8">
                    <label class="control-label">Answer text</label>
                </div>

                <div class="col-md-1">
                    <label class="control-label">Value</label>
                </div>

                <div class="col-md-1">
                    <label class="control-label">Score</label>
                </div>
            </div>
        
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                <div class="row form-group">
                    <div class="col-md-8">
                        <input type="hidden" asp-for="@Model.Answers[i].Id" />
                        <input asp-for="@Model.Answers[i].Text" class="form-control" />
                    </div>

                    <div class="col-md-1">
                        <input type="hidden" asp-for="@Model.Answers[i].Id" />
                        @*<input asp-for="@Model.Answers[i].Value" class="form-control" />*@
                    </div>

                    <div class="col-md-1">
                        @*@Html.EditorFor(m => m.Answers[i].Score)*@
                        @Html.CheckBoxFor(m => m.Answers[i].TestValue)
                    </div>
                </div>
            }
        
    </div>
    
    <div class="btn-group form-group">
        <input type="submit" value="&nbsp;Add&nbsp;" name="cmd" class="btn btn-default" />
        <input type="submit" value="Remove" name="cmd" class="btn btn-default" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save Question" name="cmd" class="btn btn-primary col-md-offset-10" />
    </div>
</form>



