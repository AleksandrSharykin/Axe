@model Axe.Models.TaskQuestion

@{
    ViewData["Title"] = "Question Details";
}

@section Scripts
{
    <script src="~/js/mdParser.js"></script>
}

<h4>Question details</h4>
<hr />

<div class="form-horizontal row">
    <dl class="col-md-6">
        <dt><label asp-for="Technology" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Technology.Name)</dd>

        <dt><label asp-for="Type" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Type)</dd>

        <dt><label asp-for="Author" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Author.UserName)</dd>

        <dt><label asp-for="Text" class="control-label"></label></dt>
        <dd><p class="codeblock md">@Model.Text</p></dd>

        <dt><label asp-for="Answers" class="control-label"></label></dt>
        <br />
        <dd >            
            <table class="table col-md-6">
                <tbody>
                    @foreach (var a in Model.Answers)
                    {
                        <tr>
                            <td>@a.Text</td>
                            <td>
                                @if (a.Score > 0)
                                {
                                    <span class="label label-success">+@a.Score</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>

<hr />
<div class="form-group row">
    <div class="col-md-2">
        @Html.ActionLink("Back to Technologies", "Index", "Technologies", new { technologyId = Model.TechnologyId })
    </div>
    <div class="btn-group">
        @Html.ActionLink("Edit", "Input", "Questions", new { id = Model.Id, technologyId = Model.TechnologyId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Delete", "Delete", "Questions", new { id = Model.Id }, new { @class = "btn btn-default" })
    </div>
</div>
