@model Axe.Models.TaskQuestion

@{
    ViewData["Title"] = "Delete Question";
}

<h4>Are you sure you want to delete this question?</h4>
<hr />

<div class="form-horizontal">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <dl>
        <dt><label asp-for="Technology" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Technology.Name)</dd>

        <dt><label asp-for="Type" class="control-label"></label></dt>
        <dd>@Html.DisplayFor(model => model.Type)</dd>

        <dt><label asp-for="Text" class="control-label"></label></dt>
        <dd><p class="codeblock">@Html.DisplayFor(model => model.Text)</p></dd>

    </dl>

    <hr />
    <form asp-action="Delete">
        <div class="form-group row">
            <div class="col-md-10">
                @Html.ActionLink("Cancel", "Details", "Questions", new { id = Model.Id })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>
