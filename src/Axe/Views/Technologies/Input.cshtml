@model Axe.Models.Technology

@{
    ViewData["Title"] = Model.Name ?? "Technology Editor";
}

<h2>Write technology description</h2>

<form asp-action="Input">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <label asp-for="Name" class="control-label"></label>

        <div class="form-group">
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <label asp-for="InformationText" class="control-label"></label>

        <div class="form-group">
            <div class="col-md-6">
                <textarea asp-for="InformationText" rows="8" cols="128" class="form-control"></textarea>
                <span asp-validation-for="InformationText" class="text-danger"></span>
            </div>
        </div>
    </div>


    <hr />
    <div class="form-group row">
        <div class="col-md-10">
            @Html.ActionLink("Back to Technologies", "Index", "Technologies", new { technologyId = Model.Id })
        </div>

        <div class="col-md-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
